<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDiary.DietPlan">

    <Button
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_button_pink"
        android:text="Food Diary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fav_food_scrollView2"
        android:layout_width="match_parent"
        android:layout_height="523dp"
        app:layout_constraintBottom_toTopOf="@+id/breakfast_btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fav_food_edit_food_button">

        <ListView
            android:id="@+id/fav_food_listView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.829"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray"
            android:divider="@drawable/custom_button_pink"
            android:dividerHeight="2dp">

        </ListView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/fav_food_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_button_pink"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fav_food_edit_cancel_button"
        android:layout_width="124dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button_grey"
        android:text="Done"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/fav_food_edit_food_button"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <Button
        android:id="@+id/fav_food_edit_food_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button_grey"
        android:text="Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/edit_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button_grey"
        android:text="Done"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/edit_food_button"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/fav_food_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/custom_button_pink"/>

</androidx.constraintlayout.widget.ConstraintLayout>